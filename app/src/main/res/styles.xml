<resources>


    <style name="RedAppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimaryRed</item>
        <item name="colorPrimaryDark">@color/colorPrimaryRedDark</item>
        <item name="colorAccent">@color/colorAccentDark</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
    </style>

    <style name="BlueAppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryBlueDark</item>
        <item name="colorAccent">@color/colorAccentLight</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
    </style>


    <style name="GreenAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryGreen</item>
        <item name="colorPrimaryDark">@color/colorPrimaryGreenDark</item>
        <item name="colorAccent">@color/colorAccentDark</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
    </style>


    <style name="ButtonStyle" parent="Base.Widget.AppCompat.ActionButton">
        <item name="android:padding">8dp</item>>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">2dp</item>>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
